{
    "compilerOptions": {
    "composite": true,
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "build",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}
